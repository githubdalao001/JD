<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.mytaobao.LoginActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:onClick="login_iamge_fan"
            android:id="@+id/login_fanhui"
            android:background="@mipmap/login_fan"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:text="帮助"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/login_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relative"
        android:layout_marginTop="50dp"
        android:background="@mipmap/login_tao"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <Button
        android:onClick="login_login_login"
        android:id="@+id/login_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_image"
        android:background="@drawable/login_button"
        android:layout_margin="10dp"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="login_newuser_zhuce"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_login"
        android:textColor="#FF6300"
        android:background="@drawable/zhuce_button"
        android:layout_margin="10dp"
        android:text="新用户注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zhi"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="支付宝账户登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />\
    <ImageView
        android:background="@mipmap/login_zhi"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/zhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
