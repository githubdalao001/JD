<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F4F4F4"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/wodell"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:background="@drawable/myselftopbg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:id="@+id/user_image"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:textColor="#fff"
                android:id="@+id/user_name"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/dingdan"
            android:paddingRight="10dp"
            android:drawableRight="@mipmap/youjiantou"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:text="我的订单"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/fukuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@mipmap/fahuo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@mipmap/shouhuo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@mipmap/pingjia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@mipmap/tuikuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/meself_shezhi"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="设置"
        android:background="#FF7201"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_below="@id/wodell"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zuji"
            android:paddingRight="10dp"
            android:drawableRight="@mipmap/youjiantou"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:text="我的信息"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:background="#FFF"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wodezuju"
                android:gravity="center_horizontal"
                android:text="我的足迹"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wodeshoucang"
                android:gravity="center_horizontal"
                android:text="我的收藏"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_horizontal"
                android:text="哈哈哈哈"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_horizontal"
                android:text="哈哈哈哈"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zhuxiao"
                android:gravity="center_horizontal"
                android:text="注销登录"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>