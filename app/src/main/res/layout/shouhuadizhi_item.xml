<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#EEEEEE"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="10dp"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dizhi_UserName"
            android:textSize="20dp"
            android:text="朱世航"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/dizhi_UserPhone"
            android:text="1233456789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/dizhi_UserName"
            android:id="@+id/dizhi_DiZhi"
            android:text="阿萨实打实大师大撒大声地啊实打实大"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#FFF"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/dizhi_isDefault"
            android:text="默认地址"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dizhi_updata"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:background="@mipmap/bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dizhi_Delete"
            android:layout_gravity="center"
            android:background="@mipmap/shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
